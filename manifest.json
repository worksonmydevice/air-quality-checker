{
  "name": "Air Quality Checker",
  "description": "Air quality checker Chrome browser extension backed by CHMI data (http://portal.chmi.cz)",
  "version": "1.0.0",
  "background": {
    "persistent": false,
    "page": "html/background.html"
  },
  "browser_action": {
    "default_icon": "images/aqchecker_not_configured.png",
    "default_title": "?",
    "default_popup": "html/popup.html"
  },  
  "icons": {
    "128": "images/icon_128.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://portal.chmi.cz//"
   ],
  "manifest_version": 2
}
